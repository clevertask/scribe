{
  "name": "@clevertask/scribe",
  "author": "CleverTask",
  "private": false,
  "version": "0.0.0",
  "type": "module",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "react",
    "javascript",
    "editor",
    "typescript",
    "prosemirror",
    "wysiwyg",
    "rich-text-editor",
    "notion",
    "block-based",
    "tiptap"
  ],
  "license": "MIT",
  "homepage": "https://github.com/clevertask/scribe",
  "bugs": {
    "url": "https://github.com/clevertask/scribe/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clevertask/scribe.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc --p ./tsconfig-build.json && vite build && npm run build:style",
    "build:style": "postcss ./lib/styles/main.css -o ./dist/main.css",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "prepare-release": "sh ./script/release && yarn run build",
    "prettier:lint": "npx prettier . --check",
    "prettier:format": "npx prettier . --write"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.15",
    "@types/lodash": "^4.14.201",
    "@types/node": "^22.10.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/turndown": "^5.0.5",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.16.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "glob": "^11.0.0",
    "lodash": "^4.17.21",
    "postcss": "^8.4.49",
    "postcss-cli": "^11.0.0",
    "prettier": "3.4.2",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.7.2",
    "vite": "^6.0.2",
    "vite-plugin-dts": "^4.3.0",
    "vite-plugin-lib-inject-css": "^2.1.1"
  },
  "prepublishOnly": "npm run build",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@tiptap/core": "^2.10.3",
    "@tiptap/extension-focus": "^2.10.3",
    "@tiptap/extension-highlight": "^2.10.3",
    "@tiptap/extension-image": "^2.10.3",
    "@tiptap/extension-link": "^2.10.3",
    "@tiptap/extension-placeholder": "^2.10.3",
    "@tiptap/extension-task-item": "^2.10.3",
    "@tiptap/extension-task-list": "^2.10.3",
    "@tiptap/pm": "^2.10.3",
    "@tiptap/react": "^2.10.3",
    "@tiptap/starter-kit": "^2.10.3",
    "@tiptap/suggestion": "^2.10.3",
    "clsx": "^2.1.1",
    "dompurify": "^3.2.2",
    "marked": "^15.0.3",
    "turndown": "^7.2.0"
  }
