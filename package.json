    "@tiptap/react": "^2.25.0",
    "@tiptap/starter-kit": "^2.25.0",
    "@tiptap/suggestion": "^2.25.0",
    "clsx": "^2.1.1",
    "isomorphic-dompurify": "^2.25.0",
    "katex": "^0.16.22",
    "marked": "^15.0.12",
    "tippy.js": "^6.3.7",
    "turndown": "^7.2.0"
