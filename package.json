    "@tiptap/core": "^2.25.0",
    "@tiptap/extension-emoji": "^2.25.0",
    "@tiptap/extension-focus": "^2.25.0",
    "@tiptap/extension-highlight": "^2.25.0",
    "@tiptap/extension-image": "^2.25.0",
    "@tiptap/extension-link": "^2.25.0",
    "@tiptap/extension-placeholder": "^2.25.0",
